---
import Layout from "@/layouts/Layout.astro";
import { SearchComponent } from "@/components/SearchComponent.jsx";
---

<Layout
  title="Unsplash Collections"
  description="Home page for Unsplash Collections"
>
  <section
    class="mx-auto flex -my-14 justify-center items-center bg-[url('/hero-image.png')] bg-contain bg-no-repeat bg-center text-center h-full"
  >
    <div></div>
    <section
      class="min-h-[720px] w-full flex flex-col text-gray-900 dark:text-white justify-center -mt-56 gap-7"
    >
      <h1 class="text-5xl font-semibold">Search</h1>
      <p class="opacity-50 text-md">
        Search high-resolution images from Unsplash
      </p>
      <div
        transition:name="search-form"
        transition:animate="fade"
        transition:persist
        class="mx-10 w-full top-16 sm:mx-auto"
      >
        <SearchComponent client:load />
      </div>
    </section>
  </section>
</Layout>
