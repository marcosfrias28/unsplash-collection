---
import { ImagesLayout } from "@/components/gallery/ImagesLayout";
import { SearchComponent } from "../components/SearchComponent";
import Layout from "../layouts/Layout.astro";
---

<Layout title="UnsplashBox - Search results" description="">
  <section class="relative">
    <div
      class="w-full -z-20 h-24 bg-[url('/gradiend-bg@2x.png')] bg-center bg-no-repeat bg-cover"
    >
    </div>
    <div
      class="absolute mx-10 w-full top-16 sm:mx-auto"
      transition:name="search-form"
      transition:animate="fade"
      transition:persist
    >
      <SearchComponent client:load />
    </div>
    <section
      class="grid auto-rows-[140px] grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-[1440px] mx-auto py-24 px-6"
    >
      <ImagesLayout client:visible />
    </section>
  </section>
</Layout>
