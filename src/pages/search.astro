---
import { SearchComponent } from "../components/SearchComponent";
import { ResultImages } from "../components/ResultImages";
import Layout from "../layouts/Layout.astro";
---

<Layout title="UnsplashBox - Search results" description="">
  <section class="relative">
    <div
      class="w-full -z-20 h-24 bg-[url('/gradiend-bg@2x.png')] bg-center bg-no-repeat bg-cover"
    >
    </div>
    <div class="absolute mx-10 w-full top-16 sm:mx-auto">
      <SearchComponent
        client:load
        transition:name="search-form"
        transition:persist
      />
    </div>
    <ResultImages client:visible transition:name="images" transition:persist />
  </section>
</Layout>
